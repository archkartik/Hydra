#include <ESP8266WiFi.h>

//Wifi network params
const char* ssid = "DolceFarNiente";
const char* password = "123456789";

const char* host = "dweet.io";
WiFiClient client;
const int httpPort = 80;

void setup() {
  Serial.begin(115200);
  delay(10);
  // connect to wifi
  Serial.println();
  Serial.println();
  Serial.println("connecting to the wifi..");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.println("..");
  }
  Serial.println("");
  Serial.println("Connected to wifi, IP- ");
  Serial.println(WiFi.localIP());
}

void loop() {
  // put your main code here, to run repeatedly:
  delay(5000);
  Serial.println("connecting to the ");
  Serial.println(host);

  //Web connection
  if (!client.connect(host, httpPort)) {
    Serial.println("connection failed!!! :( ");
    return;
  }

  // indicate specific URL and send connection request
  String url = "http://postman-echo.com/get";
  Serial.print("Requesting URL: ");
  Serial.println(url);
  client.print(String("GET ") + url + "HTTP/1.1\r\n" + "Host: " + host + "\r\n" + "Connection: close\r\n\r\n");

  //wait some time for server response
  unsigned long timeout = millis();
  while (client.available() == 0) {
    if (millis() - timeout > 5000) {
      Serial.println(">>> Client timeout !");
      client.stop();
      return;
    }
  }

  while (client.available()) {
    //server connected
    String line = client.readStringUntil('\r');
    Serial.print(line);
  }

  Serial.println();
  Serial.println("closing connection");
}
